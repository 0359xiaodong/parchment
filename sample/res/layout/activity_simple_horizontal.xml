<?xml version="1.0" encoding="utf-8"?>
<mobi.parchment.widget.adapterview.listview.ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:parchment="http://schemas.android.com/apk/res/mobi.parchment"
        android:background="@color/activity_background"
        android:id="@+id/parchment_view"
        parchment:cellSpacing="20dp"
        parchment:orientation="horizontal"
        parchment:snapPosition="onScreen"
        parchment:snapToPosition="true"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/activity_sample_parchment_padding_small"
        android:paddingRight="@dimen/activity_sample_parchment_padding_large"
        android:paddingTop="@dimen/activity_sample_parchment_padding_medium"
        android:paddingBottom="@dimen/activity_sample_parchment_padding_medium"
        android:scrollbars="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>