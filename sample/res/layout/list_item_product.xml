<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/list_item_product_image_view"
        android:background="@color/list_item_product_background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/list_item_product_text_view"
        android:layout_gravity="center_vertical|left"
        android:paddingTop="@dimen/list_item_product_text_view_padding_vertical"
        android:paddingBottom="@dimen/list_item_product_text_view_padding_vertical"
        android:paddingLeft="@dimen/list_item_product_text_view_padding_horizontal"
        android:paddingRight="@dimen/list_item_product_text_view_padding_horizontal"
        android:background="@color/list_item_product_text_view_background"
        android:textColor="@color/list_item_product_text_view_font_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>