<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.parchment"
          android:versionCode="1"
          android:name="@string/app_name"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="17"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:name="com.parchment.SimpleApplication"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.parchment.SimpleListViewActivity"
                android:label="@string/app_name"/>

        <activity
                android:name="com.parchment.SimpleGridViewActivity"
                android:label="@string/app_name"/>

        <activity
                android:name="com.parchment.SimpleGridDefinitionViewActivity"
                android:label="@string/app_name"/>

        <activity
            android:name="com.parchment.SimpleViewPagerActivity"
            android:label="@string/app_name"/>

        <activity android:name="com.parchment.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>